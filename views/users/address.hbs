                        <button class="site-btn btn btn-white" type="button" data-toggle="collapse"
                            data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            <span class="text-danger">+</span> ADD A NEW ADDRESS
                        </button>
                    </div>
                    <div class="collapse col-md-10 col-lg-12" id="collapseExample">
                        <form action="/addAddress" method="post">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Full Name</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input name="name" class="text-muted mb-0" type="text"></input>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Building Name</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input name="buildingName" class="text-muted mb-0" type="text"></input>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Town / City</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input name="city" class="text-muted mb-0" type="text"></input>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Post Code</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input name="postcode" class="text-muted mb-0" type="number"></input>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Phone</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input name="phone" class="text-muted mb-0 inp" type="number"></input>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Email</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input name="email" class="text-muted mb-0" type="email"></input>
                                            <input value="" name="code" type="number" hidden>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success mb-3">Submit</button>

                        </form>

                    </div>
                </div>
                {{#each userAddress.address}}
                <div class="card mt-3">
                    <div class="card-body">
                        <p class="text-dark">{{this.name}},<br>
                        {{this.phone}}<br>
                        {{this.buildingName}}, {{this.city}}, {{this.postcode}}</p> 
                    </div>
                </div>
                {{/each}}


            </div>
        </div>
    </div>
</section>







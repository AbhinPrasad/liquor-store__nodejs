<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                    <div class="row">
                        <img src="/images/logo.png.png" class="logo w-25 h-15 ml-5">
                    </div>
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                        <img src="/images/wp9254859.webp" class="image">
                    </div>
                </div>
            </div>
            <form action="/signup" method="post" class="my-auto text-danger" name="signupform" id="signupForm">
			<div class="row px-3 mt-5">
                    <label class="mb-1">
                        <h6 class="mb-0 text-sm text-dark">Name</h6>
                    </label>
                    <input type="text" name="name" placeholder="Enter full name" required minlength="3">
                </div>
                <div class="row px-3">
                    <label class="mb-1">
                        <h6 class="mb-0 text-sm text-dark">Email Address</h6>
                    </label>
                    <input class="mb-4" type="email" name="email" placeholder="Enter a valid email address" required>
                </div>
				<div class="row px-3">
                    <label class="mb-1">
                        <h6 class="mb-0 text-sm text-dark" >Phone</h6>
                    </label>
                    <input type="number" id="phone" name="phone" placeholder="Enter your mobile number" required >
                </div>
                <div class="row px-3">
                    <label class="mb-1">
                        <h6 class="mb-0 text-sm text-dark">Password</h6>
                    </label>
                    <input type="password" name="password" placeholder="Enter password" id="password" required >

                </div>
                <div class="row px-3">
                    <label class="mb-1">
                        <h6 class="mb-0 text-sm text-dark">Confirm Password</h6>
                    </label>
                    <input type="password" name="cpassword" placeholder="Confirm Password" equalTo="#password" required>
                    <input name="block" hidden>

                </div>
                {{#if signupErr}}
                      <p class="text-danger">{{signupErr}}</p>
                    {{/if}}
                <div class="row mb-3 px-3">
                    <button type="submit" class="btn btn-blue text-center">Signup</button>
                    
                </div>
                <div class="row mb-4 px-3">
                    <small class="font-weight-bold text-dark">Already have an account? <a class="text-danger "
                            href="/login">Login</a></small>
                </div>
        </div>
    </div>
</div>

</div>
</div>
</form>




<script

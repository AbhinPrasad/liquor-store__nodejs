<div class="container-fluid my-5 d-sm-flex justify-content-center">
    <div class="card px-2">
        <div class="card-header bg-white">
          <div class="row justify-content-between">
            <div class="col">
                <p class="text-muted"> Order ID  <span class="font-weight-bold text-dark">{{order._id}}</span></p> 
                <p class="text-muted"> Place On <span class="font-weight-bold text-dark">{{order.date}}</span> </p></div>
                <div class="flex-col my-auto">
                    <h6 class="ml-5 mr-3">
                        {{#if order.products.delivered}}
                        <p class="text-success">Item delivered on <br>{{order.products.deliveryDate}}</p>
                        {{else if order.products.cancelled}}
                         <p class="text-danger">Order cancelled</p>
                         {{else}}
                         <a href="/cancelOrder/{{order._id}}/{{order.productDetails._id}}">Cancel Order</a>
                        {{/if}}
                    </h6>
                </div>
          </div>
        </div>
        <div class="card-body">
            <div class="media flex-column flex-sm-row">
                <div class="media-body ">
                    <h5 class="bold">{{order.productDetails.name}} <p class="font-weight-light text-muted">({{order.productDetails.category}})</p> </h5>
                    <p class="text-muted"> Qt: {{order.products.quantity}}</p>
                    <h4 class="mt-3 mb-4 bold"> <span class="mt-5">&#x20B9;</span> {{order.productDetails.price}}<span class="small text-muted">  via ({{order.paymentMethod}}) </span></h4>
                    <a href="/go-to-myOrders" class="btn  btn-outline-primary">Go to My Orders</a>    
                </div><img class="align-self-center img-fluid" src="/product-images/{{order.productDetails._id}}.jpg" width="160 " height="180">
            </div>
        </div>
        <div class="row px-3">
            <div class="col">
                <ul id="progressbar" >
                    {{#if order.products.placed}}
                    <li class="step0 active " id="step1">PLACED</li>
                    <li class="step0  text-muted text-center" id="step2">SHIPPED</li>

                    <li class="step0  text-muted text-right" id="step3">DELIVERED</li>
                    {{else if order.products.shipped}}
                    <li class="step0 active " id="step1">PLACED</li>
                    <li class="step0  active text-center" id="step2">SHIPPED</li>
                    <li class="step0  text-muted text-right" id="step3">DELIVERED</li>
                    {{else if order.products.cancelled}}
                    <li class="step0 text-muted " id="step1">PLACED</li>
                    <li class="step0  text-muted text-center" id="step2"></li>
                    <li class="step0  text-muted text-right" id="step3">CANCELLED</li>

                    {{else}}
                    <li class="step0 active " id="step1">PLACED</li>
                    <li class="step0  active text-center" id="step2">SHIPPED</li>
                    <li class="step0  active text-right" id="step3">DELIVERED</li>
                    {{/if}}
                </ul>
            </div>
        </div>
         
    </div>
</div>


